// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client"
  output          = "./client"
  previewFeatures = ["postgresqlExtensions"]
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "postgresql"
}

model Collection {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title      String
  composerId String  @db.Uuid
  composer   Person  @relation(fields: [composerId], references: [id]) // A collection has a unique composer
  pieces     Piece[]
  creator    User?   @relation(fields: [creatorId], references: [id])
  creatorId  String? @db.Uuid

  @@unique([composerId, title])
}

model Piece {
  id                String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title             String
  collection        Collection?    @relation(fields: [collectionId], references: [id]) // A piece may have a unique collection
  collectionId      String?        @db.Uuid
  collectionRank    Int?
  nickname          String?
  composer          Person         @relation(fields: [composerId], references: [id]) // A piece has a unique composer
  composerId        String         @db.Uuid
  yearOfComposition Int?
  creator           User?          @relation(fields: [creatorId], references: [id])
  creatorId         String?        @db.Uuid
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  pieceVersions     PieceVersion[] // A piece can have many versions

  @@unique([composerId, title])
  @@unique([collectionId, collectionRank])
}

model PieceVersion {
  id        String                     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  piece     Piece                      @relation(fields: [pieceId], references: [id], onDelete: Cascade) // A piece version belongs to a single piece
  pieceId   String                     @db.Uuid
  category  PIECE_CATEGORY
  movements Movement[] // A pieceVersion can have many movements
  mMSources MMSourcesOnPieceVersions[] // A pieceVersion can have many sources
  creator   User?                      @relation(fields: [creatorId], references: [id])
  creatorId String?                    @db.Uuid
  createdAt DateTime                   @default(now())
  updatedAt DateTime                   @updatedAt
}

model Movement {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  pieceVersion   PieceVersion @relation(fields: [pieceVersionId], references: [id], onDelete: Cascade) // A movement belongs to a single piece
  pieceVersionId String       @db.Uuid
  rank           Int
  key            KEY
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  sections       Section[] // A movement can have many sections

  @@unique([pieceVersionId, rank])
}

model Section {
  id                              String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  movement                        Movement        @relation(fields: [movementId], references: [id], onDelete: Cascade)
  movementId                      String          @db.Uuid
  rank                            Int
  metreNumerator                  Int
  metreDenominator                Int
  isCommonTime                    Boolean         @default(false)
  isCutTime                       Boolean         @default(false)
  fastestStructuralNotesPerBar    Float
  fastestStaccatoNotesPerBar      Float?
  fastestRepeatedNotesPerBar      Float?
  fastestOrnamentalNotesPerBar    Float?
  isFastestStructuralNoteBelCanto Boolean         @default(false)
  tempoIndication                 TempoIndication @relation(fields: [tempoIndicationId], references: [id])
  tempoIndicationId               String          @db.Uuid
  metronomeMarks                  MetronomeMark[] // A movement can have many metronome marks
  comment                         String?
  commentForReview                String?
  createdAt                       DateTime        @default(now())
  updatedAt                       DateTime        @updatedAt

  @@unique([movementId, rank])
}

model TempoIndication {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  text      String    @unique
  sections  Section[] // A tempo indication can be used by many sections
  creator   User?     @relation(fields: [creatorId], references: [id])
  creatorId String?   @db.Uuid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MetronomeMark {
  id             String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  mMSource       MMSource   @relation(fields: [mMSourceId], references: [id], onDelete: Cascade)
  mMSourceId     String     @db.Uuid
  beatUnit       NOTE_VALUE
  bpm            Int
  notesPerSecond Json? // Will not be used after data seeding
  notesPerBar    Json? // Will not be used after data seeding
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  section        Section    @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId      String     @db.Uuid
  comment        String?

  @@unique([mMSourceId, sectionId])
}

model MMSourcesOnPieceVersions {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  pieceVersion   PieceVersion @relation(fields: [pieceVersionId], references: [id], onDelete: Cascade)
  pieceVersionId String       @db.Uuid
  mMSource       MMSource     @relation(fields: [mMSourceId], references: [id], onDelete: Cascade)
  mMSourceId     String       @db.Uuid
  rank           Int

  @@unique([mMSourceId, rank])
  @@unique([mMSourceId, pieceVersionId])
}

model MMSource {
  id              String                     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title           String? // ?? Is it usefull ?
  pieceVersions   MMSourcesOnPieceVersions[] // A source is composed of one or more pieceVersions
  type            SOURCE_TYPE
  link            String
  permalink       String
  year            Int
  isYearEstimated Boolean                    @default(false)
  references      Reference[] // A source can have many references
  contributions   Contribution[] // A source can have many Contributions
  metronomeMarks  MetronomeMark[] // A source can have many metronome marks
  creator         User?                      @relation(fields: [creatorId], references: [id])
  creatorId       String?                    @db.Uuid
  comment         String?
  sectionCount    Int                        @default(0)

  // Review process
  reviewState REVIEW_STATE @default(PENDING)
  reviews     Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reference {
  id         String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  mMSource   MMSource       @relation(fields: [mMSourceId], references: [id], onDelete: Cascade)
  mMSourceId String         @db.Uuid
  type       REFERENCE_TYPE
  reference  String
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  // A constraint Reference_type_reference_isbn_ismn_key directly in DB makes a unique index (type, reference) for type = ISBN | ISMN.
  // We can have multiple PLATE_NUMBER references.
}

model Contribution {
  id             String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  mMSource       MMSource          @relation(fields: [mMSourceId], references: [id], onDelete: Cascade)
  mMSourceId     String            @db.Uuid
  person         Person?           @relation(fields: [personId], references: [id], onDelete: Cascade)
  personId       String?           @db.Uuid
  organization   Organization?     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String?           @db.Uuid
  role           CONTRIBUTION_ROLE
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  // TODO: Need to add a constraint to ensure that one and only one of personId or organizationId is set
  // constraint person_org_xor check ((personId IS NOT NULL AND organizationId IS NULL) OR (organizationId IS NOT NULL AND personId IS NULL))
}

model Organization {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String         @unique
  contributions Contribution[] // An organization can have many contributions
  creator       User?          @relation(fields: [creatorId], references: [id])
  creatorId     String?        @db.Uuid
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Person {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstName     String
  lastName      String
  birthYear     Int
  deathYear     Int?
  collections   Collection[]
  compositions  Piece[] // A person can have compose many pieces
  contributions Contribution[] // A person can have many contributions
  creator       User?          @relation(fields: [creatorId], references: [id])
  creatorId     String?        @db.Uuid
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@unique([firstName, lastName])
}

// Next-auth related models

model Account {
  id                String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id               String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name             String?
  email            String?           @unique
  passwordHash     String?
  role             String?           @default("USER")
  emailVerified    DateTime?
  image            String?
  accounts         Account[]
  sessions         Session[]
  mMSources        MMSource[] // A user can have created many sources
  collections      Collection[] // A user can have creatd many collections
  pieces           Piece[] // A user can have created many pieces
  pieceVersions    PieceVersion[] // A user can have created many pieceVersions
  persons          Person[] // A user can have created many persons
  organizations    Organization[] // A user can have created many organizations
  TempoIndications TempoIndication[] // A user can have created many tempoIndications

  // Review process
  reviews          Review[] // A user can have created many reviews
  auditLogs        AuditLog[] // A user can have authored many audit logs
  reviewedEntities ReviewedEntity[] // A user can have created many reviewed entity flags

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Enums

enum NOTE_VALUE {
  WHOLE
  HALF
  DOTTED_HALF
  QUARTER
  DOTTED_QUARTER
  EIGHTH
  DOTTED_EIGHTH
  SIXTEENTH
  DOTTED_SIXTEENTH
  THIRTYSECOND
  DOTTED_THIRTYSECOND
}

enum KEY {
  A_FLAT_MAJOR
  A_FLAT_MINOR
  A_MAJOR
  A_MINOR
  A_SHARP_MAJOR
  A_SHARP_MINOR
  B_FLAT_MAJOR
  B_FLAT_MINOR
  B_MAJOR
  B_MINOR
  C_FLAT_MAJOR
  C_FLAT_MINOR
  C_MAJOR
  C_MINOR
  C_SHARP_MAJOR
  C_SHARP_MINOR
  D_FLAT_MAJOR
  D_FLAT_MINOR
  D_MAJOR
  D_MINOR
  D_SHARP_MAJOR
  D_SHARP_MINOR
  E_FLAT_MAJOR
  E_FLAT_MINOR
  E_MAJOR
  E_MINOR
  F_FLAT_MAJOR
  F_FLAT_MINOR
  F_MAJOR
  F_MINOR
  F_SHARP_MAJOR
  F_SHARP_MINOR
  G_FLAT_MAJOR
  G_FLAT_MINOR
  G_MAJOR
  G_MINOR
  G_SHARP_MAJOR
  G_SHARP_MINOR
}

enum PIECE_CATEGORY {
  KEYBOARD
  CHAMBER_INSTRUMENTAL
  ORCHESTRAL
  VOCAL
  OTHER
}

enum SOURCE_TYPE {
  ARTICLE
  BOOK
  DIARY
  EDITION
  LETTER
  MANUSCRIPT
  OTHER
}

enum REFERENCE_TYPE {
  ISBN
  ISMN
  PLATE_NUMBER
}

enum CONTRIBUTION_ROLE {
  ARRANGER
  EDITOR
  MM_PROVIDER
  PUBLISHER
  TRANSCRIBER
  TRANSLATOR
  OTHER
}

// Review process enums

enum REVIEW_STATE {
  PENDING
  IN_REVIEW
  APPROVED
  ABORTED
}

enum REVIEWED_ENTITY_TYPE {
  PERSON
  ORGANIZATION
  COLLECTION
  PIECE
  PIECE_VERSION
}

enum AUDIT_ENTITY_TYPE {
  PERSON
  ORGANIZATION
  COLLECTION
  PIECE
  PIECE_VERSION
  MOVEMENT
  SECTION
  TEMPO_INDICATION
  METRONOME_MARK
  MM_SOURCE
  REFERENCE
  CONTRIBUTION
}

enum OPERATION {
  CREATE
  UPDATE
  DELETE
}

// Review process models

model Review {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  mMSource       MMSource     @relation(fields: [mMSourceId], references: [id], onDelete: Cascade)
  mMSourceId     String       @db.Uuid
  creator        User         @relation(fields: [creatorId], references: [id])
  creatorId      String       @db.Uuid
  state          REVIEW_STATE @default(PENDING)
  startedAt      DateTime     @default(now())
  endedAt        DateTime?
  overallComment String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  auditLogs        AuditLog[]
  reviewedEntities ReviewedEntity[]

  @@index([mMSourceId])
}

model ReviewedEntity {
  id           String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  entityType   REVIEWED_ENTITY_TYPE
  entityId     String               @db.Uuid
  reviewedAt   DateTime             @default(now())
  reviewer     User                 @relation(fields: [reviewedById], references: [id])
  reviewedById String               @db.Uuid
  review       Review               @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId     String               @db.Uuid

  @@unique([entityType, entityId])
  @@index([reviewId])
  @@index([reviewedById])
}

model AuditLog {
  id         String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  review     Review            @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId   String            @db.Uuid
  entityType AUDIT_ENTITY_TYPE
  entityId   String            @db.Uuid
  operation  OPERATION
  before     Json?
  after      Json?
  author     User              @relation(fields: [authorId], references: [id])
  authorId   String            @db.Uuid
  comment    String?
  createdAt  DateTime          @default(now())

  @@index([entityType, entityId])
  @@index([reviewId])
}
